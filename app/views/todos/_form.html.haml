= form_for(@todo) do |f|
  - if @todo.errors.any?
    #error_explanation
      %ul.list-unstyled.alert.alert-danger.long
        - @todo.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.label :content
    %br
    = f.text_area :content, class: "long"
  .form-group
    = f.label :section
    %br
    = f.text_field :section, class: "long"
  %span
    = f.submit "Submit", class: "btn btn-primary"
    = link_to 'Back', todos_path, class: "btn btn-default"
