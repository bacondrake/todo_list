= simple_form_for(@todo) do |f|
  - if @todo.errors.any?
    #error_explanation
      %ul.list-unstyled.alert.alert-danger.long
        - @todo.errors.full_messages.each do |message|
          %li= message
  .form-group
    = f.input :content, label: "To-do", as: :pagedown, input_html: { preview: true }
  .form-group
    = f.input :section, label: "Category", as: :pagedown, input_html: { preview: true }
  %span
    = f.button :submit, class: "btn btn-primary"
    = link_to 'Back', todos_path, class: "btn btn-default"
  %br
  %br
